<!-- START SHOPPING CART -->
<section class="cart pt-5">


  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-6 col-md-10">
        <div class="page__title">
          <h1>Shopping cart</h1>
          {%  if cart.item_count < 1  %}
          <p>Your shopping cart is empty.</p>
          <a href="/collections/all" class="btn btn-link col-12 col-lg-4 col-md-4">Continue shopping</a>
          {% endif %}
        </div>
      </div>
    </div>


    {%  if cart.item_count > 0 %}
    <!-- START CART ITEMS -->
    <div class="row">
      <div class="col-12 pt-3 pb-5">
        <form action="/cart" method="post">
          <table style="width:100%">
            <tr>
              <th>&nbsp;</th>
              <th>Item</th>
              <th>Price</th>
              <th>Quantity</th>
              <th class="d-none d-lg-block d-md-block">Total</th>
              <th>&nbsp;</th>
            </tr>

            <!-- start product row -->
            {% for item in cart.items %}
                {%  include 'cart-item' %}
            {% endfor %}
            <!-- end product row -->

          </table>

          <!-- start checkout button -->
          <div class="cart__checkout p-0 pt-5">
            <div class="col-12 col-lg-4 col-md-4 p-0">
              <div class="cart__subtotal text-lg-right text-md-right">SUBTOTAAL <span
                        class="subtotal__price"><span
                          class="product__currency">{{ cart.currency.symbol }}</span>{{ cart.total_price | money_without_currency }}</span></div>
              <div class="cta">
                <a href="/checkout" class="btn btn-primary">Proceed to checkout</a>
              </div>
            </div>
          </div>
          <!-- end checkout button -->

        </form>
      </div>

    </div>
    <!-- END CART ITEMS -->
    {%  endif %}

  </div>


  </div>
  </div>
</section>
<!-- END SHOPPING CART -->

