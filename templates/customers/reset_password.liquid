<!-- START RECOVER -->
<section class="recover pt-5 pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-6 pb-5">
                <div class="page__title">
                    <h1>{{ 'customer.reset_password.title' | t }}</h1>
                    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                    <!-- start recover fields -->
                    <div class="pt-3 pb-5">
                        {% form "reset_customer_password" %}
                            <div class="input-group pb-3">
                                <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                                <input type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}"data-parsley-required="true">

                            </div>
                            <div class="input-group pb-3">
                                <label for="confirmResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                                <input type="password" value="" name="customer[password]" id="confirmResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}"data-parsley-required="true"
                                       data-parsley-equalto="#ResetPassword">
                            </div>

                            <div class="cta">
                                <input type="submit" class="btn btn-primary" value="{{ 'customer.reset_password.submit' | t }}">
                            </div>
                            {{ form.errors | default_errors }}
                        {%  endform %}
                    </div>
                    <!-- end recover fields -->

                </div>
            </div>

        </div>
    </div>
</section>

<!-- END RECOVER -->


